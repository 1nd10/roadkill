@model PageSummary
@{ 
	ViewBag.Title = "Add/edit page";
}
<script type="text/javascript">
$.require("wysiwyg.js");
</script>

<div id="edit">
	@Html.ValidationSummary("Saving the page was unsuccessful. Please correct the errors and try again.")

	@using (Html.BeginForm())
	{
		@(Html.HiddenFor<PageSummary, Guid>(p => p.Id))
		@(Html.HiddenFor<PageSummary, string>(p => p.Tags))
	 
		<div class="title">
			<label for="Title">Title</label>
			@(Html.TextBoxFor<PageSummary, string>(p => p.Title))<br />
		</div>
		<br />
		
		<div id="tagit">
			<label for="tags">Tags</label>
			<ul id="mytags"></ul>
		</div>
		
		<br />
	 
		<div id="wysiwyg-toolbar">
			<a href="javascript:;" class="wysiwyg-bold"><img src="@(Url.Content("~/Assets/images/wysiwyg/bold.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-italic"><img src="@(Url.Content("~/Assets/images/wysiwyg/italic.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-underline"><img src="@(Url.Content("~/Assets/images/wysiwyg/underline.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-h1"><img src="@(Url.Content("~/Assets/images/wysiwyg/h1.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-h2"><img src="@(Url.Content("~/Assets/images/wysiwyg/h2.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-h3"><img src="@(Url.Content("~/Assets/images/wysiwyg/h3.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-h4"><img src="@(Url.Content("~/Assets/images/wysiwyg/h4.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-h5"><img src="@(Url.Content("~/Assets/images/wysiwyg/h5.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-bullets"><img src="@(Url.Content("~/Assets/images/wysiwyg/bullets.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-numbers"><img src="@(Url.Content("~/Assets/images/wysiwyg/numbers.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-picture"><img src="@(Url.Content("~/Assets/images/wysiwyg/picture.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-link"><img src="@(Url.Content("~/Assets/images/wysiwyg/link.png"))" border="0" /></a>
			<a href="javascript:;" class="wysiwyg-help"><img src="@(Url.Content("~/Assets/images/wysiwyg/help.png"))" border="0" /></a>
		</div>
		@(Html.TextAreaFor<PageSummary, string>(p => p.Content, new { @class = "edittextarea" }))
		<br />

		<div class="buttonContainer">
			<input type="submit" class="button saveButton" value="Save" />
			<input type="button" class="button previewButton" value="Preview" />
			<input type="button" class="button cancelButton" value="Cancel" />
		</div>
	
		<div id="previewLoading"><img src="@(Url.Content("~/Assets/images/wysiwyg/loading.gif"))" border="0" /></div>
		<div id="previewContainer">
			<h2>Preview</h2>
			<div id="preview"></div>
		</div>
	}
</div>