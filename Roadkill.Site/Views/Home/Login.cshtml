@{ 
	ViewBag.Title = "Login";
}

<h1>Login</h1>
@Html.ValidationSummary("Error")

@using (Html.BeginForm())
{
	@Html.Hidden("fromUrl",Request.QueryString["ReturnUrl"])
	<fieldset id="login" class="rounded10 lightborder">
		<label for="username" class="loginlabel">Username:</label>
		@Html.TextBox("username", null, new { @class = "logintextbox" })
	<br class="clear" />	

	<label for="password" class="loginlabel">Password:</label>
	<div>@Html.Password("password", null, new { @class = "logintextbox" })</div>
	<br class="clear" />
	
	<input type="submit" id="loginbutton" class="button" value="Login" />
	</fieldset>
}