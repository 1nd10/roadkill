@model PageSummary

@if (RoadkillContext.Current.IsLoggedIn)
{
@Html.ActionLink("Edit", "Edit", "Page", new { id = Model.Id }, new { @class = "editpage" }) <text>&nbsp;|&nbsp;</text>
@Html.ActionLink("History","History","Page",new { id = Model.Id}, new { @class = "pagehistory" })
}

<h1 class="pagetitle">@Model.Title</h1>

<div id="pagecontent">
@Html.MarkdownToHtml(Model.Content)
</div>